@model IEnumerable<PracticaMVC.Models.carreras>

@{
    ViewData["Title"] = "Index";
}

<h1>Carreras</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre_carrera)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.facultad_id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_carrera)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.facultad_id)
            </td>
            <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.carrera_id">Edit</a> |
                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.carrera_id">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.carrera_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
